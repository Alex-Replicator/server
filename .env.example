# Имя проекта (используется для имен контейнеров, сетей и т.д.)
COMPOSE_PROJECT_NAME=server

# Режим отладки (1 - включен, 0 - выключен)
DEBUG=1

# Версии ПО
PHP_VERSION=8.1
MYSQL_VERSION=8.0
NGINX_VERSION=1.25
MEMCACHED_VERSION=1.6
ADMINER_VERSION=4.8.1

# Настройки MySQL
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=app_db
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password

# Пути к директориям проекта
PROJECT_ROOT=..
SRC_DIR=../src

# Порты для сервисов
NGINX_PORT=8080
MYSQL_PORT=3306
ADMINER_PORT=8081
MEMCACHED_PORT=11211

# Настройки для CI/CD
SYNC_DATABASE=0  # 0 - только код, 1 - код + БД 